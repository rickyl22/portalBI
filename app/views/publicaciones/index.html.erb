<div class="content_p android-content mdl-layout__content">
  <div class="contenido-in contenido-kpis">
    <h2>Publicaciones</h2>
    <div class=" mdl-grid mdl-grid--no-spacing">
      <% @publicaciones.each do |publicacion| %>
          <div class="mdl-cell mdl-cell--6-col">
            <div class="demo-card-wide mdl-card mdl-shadow--4dp mdl-card-kpis mdl-card-index-ntc">
              <div class="index-noticia">
                <div class="mdl-card__title mdl-card__title-kpi">
                  <%= image_tag(publicacion.imagen_url.to_s) %>
                </div>
                <div class="mdl-card__supporting-text">
                  <h3 class="mdl-card__title-text"><span><%= publicacion.titulo %></span></h3>
                  <br>
                  <div class="descp_noticia">
                    <%= publicacion.descripcion %>
                  </div>
                </div>
              </div>

              <div class="mdl-card__actions mdl-card--border">
                <div class="boton_act_kpis">
                  <%= link_to  edit_publicacion_path(publicacion), id:"edit_kpi_#{publicacion.id}", class: "mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect bnt_act" do%>
                      <i class="material-icons">edit</i>
                  <% end %>
                  <div class="mdl-tooltip" data-mdl-for="edit_kpi_<%=publicacion.id%>">
                    Editar Publicación:  <strong><%=publicacion.titulo%></strong>
                  </div>
                  <%= button_to publicacion_path(publicacion),id:"delete_kpi_#{publicacion.id}", class:"mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect bnt_act",:method => "delete" do%>
                      <i class="material-icons">delete</i>
                  <% end %>
                  <div class="mdl-tooltip" data-mdl-for="delete_kpi_<%=publicacion.id%>">
                    Eliminar Publicación:  <strong><%=publicacion.titulo%></strong>
                  </div>
                  <%= link_to publicacion,id:"ver_kpi_#{publicacion.id}", class:"mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect bnt_act" do%>
                      <i class="material-icons">visibility</i>
                  <% end %>
                  <div class="mdl-tooltip" data-mdl-for="ver_kpi_<%=publicacion.id%>">
                    Ver Publicación:  <strong><%=publicacion.titulo%></strong>
                  </div>
                </div>
              </div>

            </div>
          </div>

      <% end %>
    </div>
  </div>
</div>
<a href="/publicaciones/new" id="view-source" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color--accent mdl-color-text--accent-contrast">Agregar Noticia</a>
