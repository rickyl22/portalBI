<div class="content_p android-content mdl-layout__content">
  <!-- Contenido -->
  <% if @publicacion.new_record? %>
      <h2>Agregar Publicación</h2>
  <% else %>
      <h2>Editar Publicación</h2>
  <% end %>
  <div class="contenido-in form_us mdl-shadow--8dp">
    <!-- Contenido -->
    <%= form_for @publicacion do |f|  %>
        <% if @publicacion.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@publicacion.errors.count, "error") %> No se pudo crear el Indicador:</h2>
              <ul>
                <% @publicacion.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
            <%= f.text_field  :titulo, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="publicacion_titulo">Titulo</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-text-area mdl-cell--12-col">
            <label class="text-area-d">Descripción:</label>
            <%= f.text_area  :descripcion,:row => "5", :class => 'mdl-text-area', :required => "required" %>
          </div>
        </div>
        <div class="mdl-grid">
          <div class="mdl-file mdl-js-file mdl-file--floating-label mdl-cell mdl-cell--6-col mdl-file">
            <%= f.file_field :imagen %>
            <label class="mdl-textfield__label" for="publicacion_imagen">Portada</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.select :estatus, ['Activo', 'Inactivo', 'Pendiente'],{prompt: ''}, :required => "required", :class => "mdl-textfield__input" %>
            <label class="mdl-textfield__label" for="publicacion_estatus">Estatus</label>
          </div>
        </div>

        </br>

        <div class="button-container">
          <button><span>Crear</span></button>
        </div>


    <% end %>

  </div>
</div>
