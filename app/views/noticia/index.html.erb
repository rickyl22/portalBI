<div class="content_p android-content mdl-layout__content">
  <div class="contenido-in contenido-kpis">
    <h2>Noticias</h2>
    <div class=" mdl-grid mdl-grid--no-spacing">
      <% @noticia.each do |noticia| %>
          <div class="mdl-cell mdl-cell--6-col">
            <div class="demo-card-wide mdl-card mdl-shadow--4dp mdl-card-kpis mdl-card-index-ntc">
              <div class="index-noticia">
                <div class="mdl-card__title mdl-card__title-kpi">
                  <%= image_tag "k_1.jpg" %>
                </div>
                <div class="mdl-card__supporting-text">
                  <h3 class="mdl-card__title-text"><span><%= noticia.titulo %></span></h3>
                  <br>
                  <p>
                    <%= noticia.descripcion %>
                  </p>
                </div>
              </div>

              <div class="mdl-card__actions mdl-card--border">
                <div class="boton_act_kpis">
                  <%= link_to  edit_noticia_path(noticia), id:"edit_kpi_#{noticia.id}", class: "mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect bnt_act" do%>
                      <i class="material-icons">edit</i>
                  <% end %>
                  <div class="mdl-tooltip" data-mdl-for="edit_kpi_<%=noticia.id%>">
                    Editar Noticia:  <strong><%=noticia.titulo%></strong>
                  </div>
                  <%= button_to noticia_path(noticia),id:"delete_kpi_#{noticia.id}", class:"mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect bnt_act",:method => "delete" do%>
                      <i class="material-icons">delete</i>
                  <% end %>
                  <div class="mdl-tooltip" data-mdl-for="delete_kpi_<%=noticia.id%>">
                    Eliminar Noticia:  <strong><%=noticia.titulo%></strong>
                  </div>
                  <%= link_to noticia,id:"ver_kpi_#{noticia.id}", class:"mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect bnt_act" do%>
                      <i class="material-icons">visibility</i>
                  <% end %>
                  <div class="mdl-tooltip" data-mdl-for="ver_kpi_<%=noticia.id%>">
                    Ver Noticia:  <strong><%=noticia.titulo%></strong>
                  </div>
                </div>
              </div>

            </div>
          </div>

      <% end %>
    </div>

    <br>

    <%= link_to 'New Noticium', new_noticia_path %>

  </div>
</div>