<div class="content_p android-content mdl-layout__content">
  <div class="contenido-in contenido-kpis">
  <!-- Contenido -->
  <% if @usuario.new_record? %>
      <h2>Agregar Usuario</h2>
  <% else %>
      <h2>Editar Usuario</h2>
  <% end %>

  <div class="form_us mdl-shadow--8dp">
    <%= form_for @usuario do |f|  %>
        <% if @usuario.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@usuario.errors.count, "error") %> No se pudo crear el Usuario:</h2>
              <ul>
                <% @usuario.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :usuario, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="usuario_usuario">Usuario</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :codigo_empleado, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="codigo_empleado">Código</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :nombre, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="nombre">Nombre</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :apellido, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="apellido">Apellido</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :correo, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="correo">Correo</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :cargo, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="cargo">Cargo</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            Área  <%= f.select :area, ["Direccion de Ingreso, Consumo Fidel y Reten","Gerencia General Planificación y Administración","Gerencia General Inteligencia de Negocios","Gerencia Experiencia del Cliente","Gerencia General Movistar TV","Gerencia General Captación","Gerencia General de Publicidad y medios","Gerencia General Asuntos Regulatorios","Dirección Planificación, Estrategia y Precios","Dirección de Interconexión y Neg. Mayorista","Dirección de Transf. Canales Virt y Telef.","Gerencia General Planificación, Org. Y Compens.","Gerencia General Desarrollo, Organiz y Talento","Gerencia General Experiencia al Empleado","Gerencia de Inversión Social","Dirección de Redes","Dirección de TI","Gerencia General de Gestión y Gobernabilidad","Dirección de Planificación y Desarrollo de Red","Gerencia General Legal","Gerencia de Legal","Gerencia General de Compliance y Legal","Gerencia de Redes Sociales","Gerencia de Entorno y Planificación","Gerencia de Comunicaciones Corporativas","Gerencia de Relaciones, Sector Académico","Gerencia de Relaciones Gubernamentales","Gerencia de Entes gubernamentales","Gerencia General de Servicios","Gerencia General Seguridad Telemática","Gerencia de Prevención de Fraudes","Gerencia de Seguridad","Gerencia Análisis de Riesgo Integral","Gerencia de Flota y Administración","Gerencia de Arquitectura y Espacios","Gerencia de Seguridad","Gerencia de Sistemas de Seguridad ","Gerencia General de Auditoría","Gerencia de Auditoria","Gerencia General de Intervención","Gerencia General de Comercial","Dir. Planif. Anal. Y Merc. De Empresas","Gerencia General Ingeniería de de Empresas","Gerencia General de TST","Dir. Negocios y Contratos Masivos","Dir. De Cont. Ges. Contable y Aseg. De Ingresos","Dirección de Finanzas","Gerencia General de Impuestos","Dirección de Compras y Logística","Gerencia General Optimización y Soporte","Dirección de Canales Oeste","Dirección de Canales Este","Gerencia General Canal Telefónicos","Dirección de Planificación de Canales"],{prompt: ''}, :required => "required", :class => "mdl-textfield__input" %>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :supervisor, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="supervisor">Supervisor</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            Gerencia <%= f.select :gerencia, ["VP MERCADEO","VP PLANIFICACIÓN ESTRATÉGICA, REGUL Y CAL.","VP RECURSOS HUMANOS","GERENCIA GENERAL FUNDACIÓN TELEFÓNICA","VP TECNOLOGÍA","VP SECRETARÍA GENERAL","DIRECCIÓN RELACIONES INSTITUCIONALES Y GOB.","DIRECCIÓN DE SEGURIDAD Y FRAUDE","DIRECCIÓN DE AUDITORÍA","VP EMPRESAS","VP FINANAZAS Y CONTROL DE GESTIÓN","VP CANALES"],{prompt: ''}, :required => "required", :class => "mdl-textfield__input" %>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :telefono, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="telefono">Télefono</label>
          </div>
        </div>

        <% if admin? || admin_min? || admin_ind? %>
            <div class="mdl-grid">
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
                <%= f.select :estatus, { "Aprobado" => "1", "Pendiente" => "0" },{prompt: ''}, :required => "required", :class => "mdl-textfield__input" %>
                <label class="mdl-textfield__label" for="estatus">Estatus</label>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
                <%= f.collection_select :role_id, @roles, :id, :nombre, {:prompt => ''}, :class => 'mdl-textfield__input', :required => "required" %>
                <label class="mdl-textfield__label" for="role_id">Rol</label>
              </div>
            </div>
        <% end %>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.password_field  :password, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="password">Contraseña</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.password_field  :password_confirmation, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="password_confirmation">Confirmar contraseña</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
            <%= f.text_field  :justificacion, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="justificacion">Justificación de la solicitud de registro</label>
          </div>

        </div>


        </br>

        <div class="button-container">
          <a href="/usuarios" class="mdl-button mdl-js-button btn-cancelar"><i class="material-icons">chevron_left</i>CANCELAR</a>
          <button><span>Enviar</span></button>
        </div>


    <% end %>

  </div>
  </div>
</div>