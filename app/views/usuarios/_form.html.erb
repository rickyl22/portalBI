<div class="content_p android-content mdl-layout__content">
  <!-- Contenido -->
  <%= form_for @usuario do |f| %>

      <% if @usuario.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@usuario.errors.count, "error") %> prohibited
              this article from being saved:
            </h2>
            <ul>
              <% @usuario.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :correo %>
