<div class="content_p android-content mdl-layout__content">
  <!-- Contenido -->
  <h2>Editar Usuario</h2>
  <div class="contenido-in form_us mdl-shadow--8dp">
    <%= form_for @usuario do |f|  %>
        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :usuario, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="usuario_usuario">Usuario</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :codigo_empleado, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="codigo_empleado">Código</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :nombre, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="nombre">Nombre</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :apellido, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="apellido">Código</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :correo, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="correo">Nombre</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :cargo, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="cargo">Cargo</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :area, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="area">Área</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :supervisor, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="supervisor">Cargo</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :gerencia, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="gerencia">Gerencia</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.text_field  :telefono, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="telefono">Télefono</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.select "estatus", "<option>Pendiente</option><option>Aprobado</option><option>Rechazar</option>".html_safe, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="estatus">estatus</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.collection_select :role_id, Role.all, :id, :nombre, {:prompt => ''}, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="role_id">rol</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.password_field  :password, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="password">Contraseña</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--6-col">
            <%= f.password_field  :password_confirmation, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="password_confirmation">Confirmar contraseña</label>
          </div>
        </div>

        <div class="mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
            <%= f.text_field  :justificacion, :class => 'mdl-textfield__input', :required => "required" %>
            <label class="mdl-textfield__label" for="justificacion">Justificación de la solicitud de registro</label>
          </div>

        </div>


        </br>

        <div class="button-container">
          <button><span>Actualizar</span></button>
        </div>


    <% end %>

  </div>

</div>