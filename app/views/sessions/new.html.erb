<div  class="content_p login_singup android-content mdl-layout__content">
   <!-- Contenido -->
  <div class="container">
    <!-- Login -->
    <div class="card"></div>
    <div class="card mdl-shadow--16dp">
      <h1 class="title">Iniciar Sesión</h1>
      <%= form_tag login_path do %>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="usuario" name="usuario">
            <label class="mdl-textfield__label" for="usuario">Nombre de usuario</label>
          </div>

          </br>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="password" id="password" name="password">
            <label class="mdl-textfield__label" for="password">Contraseña</label>
          </div>

          </br></br></br>

          <div class="button-container">
            <button><span>Acceder</span></button>
          </div>

      <% end %>
    </div>

  <!-- Sign up -->
    <div class="card alt mdl-shadow--16dp">
      <div class="toggle"></div>
      <h1 class="title">Solicitud de Registro
        <div class="close"></div>
      </h1>

      <%= form_for(@usuarios, url: usuarios_path) do |f| %>
          <input type="hidden" name="solicitud_reg">
          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <%= f.text_field  :usuario, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="usuario_usuario">Usuario</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <%= f.text_field  :codigo_empleado, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="codigo_empleado">Código</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <%= f.text_field  :nombre, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="nombre">Nombre</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <%= f.text_field  :apellido, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="apellido">Apellido</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <%= f.text_field  :correo, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="correo">Correo</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <%= f.text_field  :cargo, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="cargo">Cargo</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l  cont-sel-g">
              <div class="input-container input_su">
               Área  <%= f.select :area,["VP MERCADEO","VP PLANIFICACIÓN ESTRATÉGICA, REGUL Y CAL.","VP RECURSOS HUMANOS","GERENCIA GENERAL FUNDACIÓN TELEFÓNICA","VP TECNOLOGÍA","VP SECRETARÍA GENERAL","DIRECCIÓN RELACIONES INSTITUCIONALES Y GOB.","DIRECCIÓN DE SEGURIDAD Y FRAUDE","DIRECCIÓN DE AUDITORÍA","VP EMPRESAS","VP FINANAZAS Y CONTROL DE GESTIÓN","VP CANALES"],{prompt: ''}, :required => "required", :class => "mdl-textfield__input" %>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <%= f.text_field  :supervisor, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="supervisor">Supervisor</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l cont-sel-g">
              <div class="input-container input_su">
                Gerencia <%= f.select :gerencia, ["Direccion de Ingreso, Consumo Fidel y Reten","Gerencia General Planificación y Administración","Gerencia General Inteligencia de Negocios","Gerencia Experiencia del Cliente","Gerencia General Movistar TV","Gerencia General Captación","Gerencia General de Publicidad y medios","Gerencia General Asuntos Regulatorios","Dirección Planificación, Estrategia y Precios","Dirección de Interconexión y Neg. Mayorista","Dirección de Transf. Canales Virt y Telef.","Gerencia General Planificación, Org. Y Compens.","Gerencia General Desarrollo, Organiz y Talento","Gerencia General Experiencia al Empleado","Gerencia de Inversión Social","Dirección de Redes","Dirección de TI","Gerencia General de Gestión y Gobernabilidad","Dirección de Planificación y Desarrollo de Red","Gerencia General Legal","Gerencia de Legal","Gerencia General de Compliance y Legal","Gerencia de Redes Sociales","Gerencia de Entorno y Planificación","Gerencia de Comunicaciones Corporativas","Gerencia de Relaciones, Sector Académico","Gerencia de Relaciones Gubernamentales","Gerencia de Entes gubernamentales","Gerencia General de Servicios","Gerencia General Seguridad Telemática","Gerencia de Prevención de Fraudes","Gerencia de Seguridad","Gerencia Análisis de Riesgo Integral","Gerencia de Flota y Administración","Gerencia de Arquitectura y Espacios","Gerencia de Seguridad","Gerencia de Sistemas de Seguridad ","Gerencia General de Auditoría","Gerencia de Auditoria","Gerencia General de Intervención","Gerencia General de Comercial","Dir. Planif. Anal. Y Merc. De Empresas","Gerencia General Ingeniería de de Empresas","Gerencia General de TST","Dir. Negocios y Contratos Masivos","Dir. De Cont. Ges. Contable y Aseg. De Ingresos","Dirección de Finanzas","Gerencia General de Impuestos","Dirección de Compras y Logística","Gerencia General Optimización y Soporte","Dirección de Canales Oeste","Dirección de Canales Este","Gerencia General Canal Telefónicos","Dirección de Planificación de Canales"],{prompt: ''}, :required => "required", :class => "mdl-textfield__input" %>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <%= f.text_field  :telefono, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="telefono">Télefono</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <%= f.password_field  :password, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="password">Contraseña</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <%= f.password_field  :password_confirmation, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="password_confirmation">Confirmar contraseña</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col input_su_cont_l">
              <div class="input-container input_su">
                <%= f.text_field  :justificacion, :class => 'mdl-textfield__input', :required => "required" %>
                <label for="justificacion">Justificación de la solicitud de registro</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          </br></br>

          <div class="button-container">
            <button><span>Registrar</span></button>
          </div>


      <% end %>

    </div>

  </div>

</div>
<script>

  $('.toggle').on('click', function() {
    $('.container').stop().addClass('active');
  });

  $('.close').on('click', function() {
    $('.container').stop().removeClass('active');
  });
</script>