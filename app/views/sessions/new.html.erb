<div  class="content_p login_singup android-content mdl-layout__content">
  <!-- Contenido -->
  <div class="container">
    <!-- Login -->
    <div class="card"></div>
    <div class="card">
      <h1 class="title">Iniciar Sesión</h1>
      <%= form_tag sessions_path do %>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="usuario" name="usuario">
            <label class="mdl-textfield__label" for="usuario">Nombre de usuario</label>
          </div>

          </br>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="password" name="password">
            <label class="mdl-textfield__label" for="password">Contraseña</label>
          </div>

          </br></br></br>
          
          <div class="button-container">
            <button><span>Acceder</span></button>
          </div>

      <% end %>
      <a class="mdl-navigation__link mdl-typography--text-uppercase" href="">Consultor</a><br>
          <%= button_to "Admin", {:controller => "casos", :action => "index", :user_tipo => "Admin"} %>
          <%= button_to "Consultor-lider", casos_path, :user_tipo => "Infosoft-Admin" %>
          <%= button_to "Cliente", casos_path, :user_tipo => "cliente" %>
          <%= button_to "Consultor", casos_path, :user_tipo => "consultor" %>
    </div>



  <!-- Sign up -->
    <div class="card alt">
      <div class="toggle"></div>
      <h1 class="title">Solicitud de Registro
        <div class="close"></div>
      </h1>

      <%= form_tag users_path do %>
          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <input type="text" id="usuario" name="usuario" required="required"/>
                <label for="usuario">Usuario</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <input type="text" id="codigo_empleado" name="codigo_empleado" required="required"/>
                <label for="codigo_empleado">Código</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <input type="text" id="nombre" name="nombre" required="required"/>
                <label for="nombre">Nombre</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <input type="text" id="apellido" name="apellido" required="required"/>
                <label for="apellido">Apellido</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <input type="text" id="correo" name="correo" required="required"/>
                <label for="correo">Correo</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <input type="text" id="cargo" name="cargo" required="required"/>
                <label for="cargo">Cargo</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <input type="text" id="area" name="area" required="required"/>
                <label for="area">Área</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <input type="text" id="supervisor" name="supervisor" required="required"/>
                <label for="supervisor">Supervisor</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <input type="text" id="gerencia" name="gerencia" required="required"/>
                <label for="gerencia">Gerencia</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <input type="text" id="telefono" name="telefono" required="required"/>
                <label for="telefono">Télefono</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col input_su_cont_l">
              <div class="input-container input_su">
                <input type="text" id="gerencia" name="gerencia" required="required"/>
                <label for="gerencia">Contraseña</label>
                <div class="bar"></div>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col input_su_cont_r">
              <div class="input-container input_su ">
                <input type="text" id="telefono" name="telefono" required="required"/>
                <label for="telefono">Confirmar contraseña</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col input_su_cont_l">
              <div class="input-container input_su">
                <input type="text" id="justificacion" name="justificacion" required="required"/>
                <label for="justificacion">Justificación de la solicitud de registro</label>
                <div class="bar"></div>
              </div>
            </div>
          </div>

          </br></br>

          <div class="button-container">
            <button><span>Registrar</span></button>
          </div>


      <% end %>

    </div>

  </div>

</div>
<script>

  $('.toggle').on('click', function() {
    $('.container').stop().addClass('active');
  });

  $('.close').on('click', function() {
    $('.container').stop().removeClass('active');
  });
</script>