      <div class="mdl-cell--6-col align-left show-caso">
        <h4>Detalles del Caso:</h4>
        <div class="mdl-grid mdl-shadow--2dp">
          <div class="mdl-cell--6-col">
            <p><strong>Titulo: </strong><%= @caso.titulo %> </p>
          </div>
          <div class="mdl-cell--6-col">
            <p><strong>Fecha de creación: </strong><%= @caso.fecha_creado %></p>
          </div>
          <div class="mdl-cell--6-col">
            <p><strong>Fecha requerido: </strong><%= @caso.fecha_req %></p>
          </div>
          <div class="mdl-cell--6-col">
            <p><strong>Delimitador: </strong><%= @caso.separacion %></p>
          </div>
          <div class="mdl-cell--6-col">
            <p><strong>Fecha desde: </strong><%= @caso.periodo_desde %></p>
          </div>
          <div class="mdl-cell--6-col">
            <p><strong>Fecha hasta: </strong><%= @caso.periodo_hasta %></p>
          </div>
          <div class="mdl-cell--12-col">
            <p><strong>tipo de archivo: </strong><%= @caso.tipo_archivo %></p>
          </div>
        </div>
        <h4>Indicadores:</h4>
        <div class="mdl-grid mdl-shadow--2dp">
          <div class="mdl-cell--4-col">
            <p><strong>ARPU :</strong><%= @caso.arpu == '0' ? "NO" : "SI" %></p>
          </div>
          <div class="mdl-cell--4-col">
            <p><strong>Altas: </strong><%= @caso.altas == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--4-col">
            <p><strong>Parque: </strong><%= @caso.parque == '0' ? "NO" : "SI" %></p>
          </div>
          <div class="mdl-cell--4-col">
            <p><strong>Recargas: </strong><%= @caso.recargas == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--4-col">
            <p><strong>Act Tabla: </strong><%= @caso.act_tabla == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--4-col">
            <p><strong>Televentas: </strong><%= @caso.tlv == '0' ? "NO" : "SI"%></p>
          </div>
        </div>
        <h4>Filtros:</h4>
        <div class="mdl-grid mdl-shadow--2dp">
          <div class="mdl-cell--4-col">
            <p><strong>Smartphone/No Smartphone:     </strong><%= @caso.phone == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--4-col">
            <p><strong>Prepago/Postpago: </strong><%= @caso.pre_post == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--4-col">
            <p><strong>Otro: </strong><%= @caso.otro == "" ? "NO" : @caso.otro %></p>
          </div>
        </div>
        <h4>Línea de Negocio:</h4>
        <div class="mdl-grid mdl-shadow--2dp">
          <div class="mdl-cell--3-col">
            <p><strong>Fijo: </strong><%= @caso.fijo == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--3-col">
            <p><strong>IM: </strong><%= @caso.im == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--3-col">
            <p><strong>Móvil: </strong><%= @caso.movil == '0' ? "NO" : "SI"%></p>
          </div>
          <div class="mdl-cell--3-col">
            <p><strong>TV: </strong><%= @caso.tv == '0' ? "NO" : "SI"%></p>
          </div>
        </div>
        <div class="mdl-grid mdl-shadow--2dp">
          <div class="mdl-cell--6-col ">
            <h4>Tipo de Caso:</h4>
            <p><%= @caso.tipo_caso %></p>
          </div>
          <div class="mdl-cell--6-col ">
            <h4>Agrupación:</h4>
            <p><%= @caso.agrup %><%= @caso.especifique %></p>
          </div>
        </div>
