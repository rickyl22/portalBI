            <h4>Condiciones:</h4>
            <p><%= @caso.condiciones %></p>
          </div>
          <div class="mdl-cell--6-col s-condiciones">
            <h4>Campos:</h4>
            <p><%= @caso.campos %></p>
          </div>
        </div>
