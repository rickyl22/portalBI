          <div class="mdl-cell--6-col ">
            <h4>Complejidad:</h4>
            <p><%= @caso.complejidad %></p>
          </div>
          <div class="mdl-cell--6-col ">
            <h4>Estatus:</h4>
            <p><%= @caso.status %></p>
          </div>
        </div>

